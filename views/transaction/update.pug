extends ../../layouts/layout.pug

block content
  h1 Update

  form(action="/transactions/" + transaction.userId + "/" + book.bookId + "/update" method="POST")
    .form-group
      input.form-control(type='hidden', name='id', value=transaction.id)
    .form-group
      label(for='inputBookId') Book ID
      input#inputBookId.form-control(type='text', name='bookId', value=book.bookId)
    .form-group
      label(for='inputBookId') Book title
      input#inputBookId.form-control(type='text', name='title', value=book.title)
    .form-group
      label(for='inputBookId') Amount
      input#inputBookId.form-control(type='text', name='amount', value=book.amount)

    button.btn.btn-primary(type='submit') Update
